---
import type { NavLink, NavFolder } from '../types';


interface Props {
  item: NavLink | NavFolder;
}

const { item } = Astro.props;
---

<li>
    {("href" in item) && (
        <a href={item.href} class="block link link-hover">{item.title}</a>
    )}

    {item.children && item.children.length > 0 && (
        <details open>
            <summary>{item.title}</summary>
            <ul>
                {item.children.map((child) => (
                    <Astro.self item={child} />
                ))}
            </ul>
        </details>
    )}
</li>
